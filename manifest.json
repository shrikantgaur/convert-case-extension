{
  "manifest_version": 3,
  "name": "Convert Case",
  "version": "1.0.0",
  "description": "Convert text between different case styles",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "clipboardWrite",
    "clipboardRead",
    "storage"
  ]
}